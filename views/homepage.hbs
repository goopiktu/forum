        <button id="sign-up" class="create-post">Create Post</button>
    </a>

  </div>

  <div class="post-container"> 
    {{#each posts}}
    <div class ="post-fit">
      <a href="/viewpost">
        {{> post}}
      </a>
    </div>
    {{/each}}
  </div>
